class MyThread extends Thread{
	private String name;
	private int count = 0;
	public MyThread(String name){
		this.name = name;
	}
	public void run(){
		while(true){
			try {
				Thread.sleep(500);
				System.out.println("Thread:" + name + " "+ count);
				count++;
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}
